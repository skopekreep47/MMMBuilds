@model HomeViewModel

<div class="text-center">
	<h1>Mechs of the week</h1>
	<h5>Enjoy a weekly selection of our favorite mechs</h5>

	<div class="row mechs-of-the-week">
		<div class="row row-cols-1 row-cols-md-3 g-4">
			@foreach (var mech in Model.MechsOfTheWeek)
			{
				<div class="col">
					<div class="card mech-card">
						<img src="@mech.ImageThumbUrl" class="card-img-top" alt="@mech.Name">
						<div class="card-body mech-button">
							<div class="d-flex justify-content-between mt-2">
								<h2 class="text-start">
									<a asp-controller="Mech"
									   asp-action="Details"
									   asp-route-id="@mech.MechId"
									   class="mech-link">@mech.Name</a>
								</h2>

								<h5 class="text-nowrap">
									@mech.Price.ToString("c")
								</h5>
							</div>
						</div>
					</div>
				</div>
			}
		</div>

	</div>
</div>
